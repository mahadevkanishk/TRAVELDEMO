<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= user.name %> 's trips </title>
    <link rel="stylesheet" href="css/showpage.css">
    <link rel="stylesheet" href="css/templatemo-style.css" />
    <link rel="stylesheet" href="css/owl.css" />
    <link rel="stylesheet" href="css/lightbox.css" />
</head>
<body>
    
  <% var k = 0; %>

  <% for(var j=0; j < user.tripdata.length; j++) { %>
 
  <% if(user.tripdata[j].tname.trim() === tripname.trim()){ %> 
      
    <% k=j %>

    <% } %>
 
 
 <%  } %>

 


    <section id="kanishk">
        <div class="box">
            <div class="inner_box">
                <div>
                    <p class="tripname">
                      <%= user.tripdata[k].tname %>
                    </p>
                </div>
                <p class="outlier">
                    <%= user.tripdata[k].tdesc %>
                </p>
            </div>
        </div>  
        <div class="img">
            
<div class="slideshow-container">
  <div style="float: right;margin-bottom: 4px;" class="white-button">
    <a href="/user/<%= user._id %>">Go Back</a>
  </div>
  <% if(user.userstatus) { %>
  <div style="float: right; margin-right:5px " class="white-button">
    <a href="/user/<%= user._id %>/<%= user.tripdata[k].tname %>/edit">Edit This Trip</a>
  </div>
  <% } %>

  
  

<% for(var i=0; i < user.tripdata[k].img.length; i++) { %> 

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="numbertext"><%= i+1 %> </div>
      
      <img src="data:image/<%=user.tripdata[k].img[i].contentType%>;base64,
      <%=user.tripdata[k].img[i].data.toString('base64')%>" alt="" style="width:100%"/>

    </div>

    <% } %>
  
    
  
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>
  
  <!-- The dots/circles -->
  <div style="text-align:center">

    <% for(var i=0; i < user.tripdata[k].img.length; i++) { %> 
    <span class="dot" <%= onclick="currentSlide(i)"%></span></span>


    <% } %>
  </div>
        </div>
    </section>

    <script src="js/showpage.js"></script>
</body>
</html>